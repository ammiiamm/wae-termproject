            <a href="/"> <div>Hello, <%= current_user.username %>! ( <%=current_user.role.name%> )</div> </a>
          <% else %>
              <!-- <a href="/users/sign_in">Signed in as.. Guest Please Click to Sign In</a> -->
              <a href="/users/sign_in">Sign In</a>
        <% end %>
        </li>
        <li>
          <% if user_signed_in? %>
              <a href="/users/sign_out">Sign Out</a>

          <% end %>
        </li>

        <li class="dropdown ">
