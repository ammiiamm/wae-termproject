<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header" align="center">
      <img class="img" id="img_logo" height="10%" weight="10%" src="/assets/logo.jpg" >
      </button>
    </div>
    <div id="div-forms">
        <div class="modal-body">
          <%= f.label :username , class: 'text-login-msg' %>
          <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder:"Username" , :required => true %>
          <div style="line-height:110%;">
            <br>
          </div>
          <%= f.label :password , class: 'text-login-msg'%>
          <%= f.password_field :password, autocomplete: "off" , class: 'form-control', placeholder:"Password", :required => true %>
          <div class="checkbox">
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= f.submit 'Sign In' , class: 'btn btn-primary btn-lg btn-block'%>
            <!--<button type="Log in" class="btn btn-primary btn-lg btn-block"> Log In </button>-->
            <%= render "devise/shared/links" %>
          </div>
          <div>
          </div>
        </div>
    </div>
  </div>
</div>
<% end %>

