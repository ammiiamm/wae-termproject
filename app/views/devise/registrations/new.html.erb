<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
    <%= devise_error_messages! %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" align="center">
          <img class="img" id="img_logo" src="/assets/logo.jpg">
          </button>
        </div>
        <div id="div-forms">
          <form id="login-form">
            <div class="modal-body">
              <%= f.label :username , class: 'text-login-msg' %>
              <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder:"Username" , :required => true %>
              <div style="line-height:110%;">
                <br>
              </div>
              <%= f.label :email , class: 'text-login-msg' %>
              <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder:"Username" , :required => true %>
              <div class="checkbox">
              </div>
              <%= f.label :password , class: 'text-login-msg'%>
              <%= f.password_field :password, autocomplete: "off" , class: 'form-control', placeholder:"Password", :required => true %>
              <div class="checkbox">
              </div>
              <%= f.label :password_confirmation , class: 'text-login-msg'%>
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control', placeholder:"Password", :required => true %>
              <div class="checkbox">
              </div>
            </div>
            <div class="modal-footer">
              <div>
                <button type="Sign up" class="btn btn-primary btn-lg btn-block"> Sign up </button>
                <%= render "devise/shared/links" %>
              </div>
              <div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
<% end %>

