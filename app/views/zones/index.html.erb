<script>
  function toggleOn() {
    $('#toggle-trigger').bootstrapToggle('on')
  }
  function toggleOff() {
    $('#toggle-trigger').bootstrapToggle('off')
  }
</script>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<div class="container">
  <h2>Listing Zones <%= link_to 'New Zone', new_zone_path, :class => "btn btn-success" %></h2>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Site</th>
      <th>Total Number of slots</th>
      <th>Available slot</th>
      <th>Updated By</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= zone.site.name %></td>
        <td><%= zone.numberofslots %></td>
        <td><%= zone.numberfree %></td>
        <td><%= zone.user.username %></td>
        <td><p class="btn btn-info"  data-toggle="modal" data-target="#<%= zone.id %>"> Show </p> <%= link_to 'Edit', edit_zone_path(zone), :class => "btn btn-warning" %> <%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
      <div class="modal fade" id="<%= zone.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Preview Zone</h4>
            </div>
            <div class="modal-body">
              <div class="container-fluid well span6">
                <div class="row-fluid">
                    <span>

                    <h6><strong>Zone Name:</strong> <%= zone.name  %></h6>
                    <h6><strong>Site Name:</strong> <%= zone.site.name %></h6>
                    <h6><strong>Number of total slots:</strong> <%= zone.numberofslots %></h6>
                    <h6><strong>Number of free slots:</strong> <%= zone.numberfree %></h6>
                      <h6><strong>Updated by:</strong> <%= zone.user.username %></h6>


                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

<br>


</div>



